<!doctype html>
<html>

  <head>
    <title>Fwitter</title>
  </head>

  <body>
    <!-- Created a navigational "bar" at the top of every page that renders the appropriate actions -->
    <!-- depending upon if the user is logged in or not -->
    <% if logged_in? %>
    <h4>What would you like to do, <%= current_user.username.capitalize %>?</h4>
      <a href="/logout">Logout</a> &nbsp
      <a href="/tweets/new">Create a New Tweet</a> &nbsp
      <a href="/tweets">See All Tweets</a>
    <% else %>
      <p><a href="/login">Login</a> or <a href="/signup">Signup</a></p>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>